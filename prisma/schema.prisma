generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email String  @unique
  id    Int     @default(autoincrement()) @id
  name  String?
  posts Post[]
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}

model Warehouse {
  id    Int     @default(autoincrement()) @id
  name  String
  zones Zone[]
}

model Zone {
  id           Int        @default(autoincrement()) @id
  number       Int
  warehouseId  Int?
  warehouse    Warehouse? @relation(fields: [warehouseId], references: [id])
  shelves      Shelf[]
}

model Shelf {
  id     Int      @default(autoincrement()) @id
  name   String   @unique
  zoneId Int?
  zone   Zone?    @relation(fields: [zoneId], references: [id])
}